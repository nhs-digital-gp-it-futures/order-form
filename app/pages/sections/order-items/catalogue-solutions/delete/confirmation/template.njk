{% extends 'includes/layout.njk' %}
{% from 'components/bc-button/macro.njk' import bcButton %}
{% block body %}
  <div class="nhsuk-width-container" data-test-id="delete-catalogue-confirmation-page">
    <div class="nhsuk-grid-row">
      <div class="nhsuk-grid-column-two-thirds">
        <h1 data-test-id="delete-catalogue-confirmation-page-title" class="nhsuk-u-margin-top-7 nhsuk-u-margin-bottom-3">{{ title }}</h1>
        <p data-test-id="delete-catalogue-confirmation-page-description" class="nhsuk-heading-l nhsuk-u-font-size-24 nhsuk-u-margin-bottom-6">{{ description }}</p>

        <form method="post">        
        <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
          {{ bcButton({
            dataTestId: "continue-button",
            text: continueButtonText,
            classes: "nhsuk-u-margin-top-9"
          }) }}
        </form>
    </div>
  </div>
{% endblock %}
